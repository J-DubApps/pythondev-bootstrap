{
  "name": "Python Dev Env",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {},
  "postCreateCommand": "pip install --upgrade pip && pip install black ruff rich",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.formatting.provider": "black",
        "editor.formatOnSave": true
      }
    }
  }
}
